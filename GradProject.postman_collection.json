{
	"info": {
		"_postman_id": "grad-project-auth-collection",
		"name": "GradProject - Authentication API",
		"description": "Collection for testing Patient and Doctor authentication endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Patient Registration",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    var jsonData = pm.response.json();",
							"    pm.environment.set(\"patient_token\", jsonData.token);",
							"    pm.environment.set(\"patient_email\", jsonData.email);",
							"    pm.environment.set(\"patient_userId\", jsonData.userId);",
							"    console.log(\"Patient registered successfully!\");",
							"    console.log(\"Token saved to environment\");",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"patient@example.com\",\n  \"password\": \"Patient123!\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"phoneNumber\": \"+1234567890\",\n  \"dateOfBirth\": \"1990-01-15\",\n  \"address\": \"123 Main St, City, State\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/auth/register/patient",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"auth",
						"register",
						"patient"
					]
				},
				"description": "Register a new patient account. All patient data will be saved to the database."
			},
			"response": []
		},
		{
			"name": "Patient Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    pm.environment.set(\"patient_token\", jsonData.token);",
							"    pm.environment.set(\"patient_email\", jsonData.email);",
							"    pm.environment.set(\"patient_userId\", jsonData.userId);",
							"    console.log(\"Patient logged in successfully!\");",
							"    console.log(\"Token saved to environment\");",
							"}",
							"",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has token\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('token');",
							"    pm.expect(jsonData).to.have.property('email');",
							"    pm.expect(jsonData).to.have.property('role', 'Patient');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"patient@example.com\",\n  \"password\": \"Patient123!\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/api/auth/login/patient",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"auth",
						"login",
						"patient"
					]
				},
				"description": "Login as a patient. Uses saved credentials from database."
			},
			"response": []
		},
